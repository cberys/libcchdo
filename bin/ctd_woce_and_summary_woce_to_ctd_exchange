#!python

from __future__ import with_statement
import sys

import libcchdo as L
import libcchdo.model.datafile
import libcchdo.formats.woce as woce
import libcchdo.formats.summary.woce as sumwoce
import libcchdo.formats.ctd.woce as ctdwoce
import libcchdo.formats.ctd.exchange as ctdex


def main(argv):
    if len(argv) < 3:
        print "Usage: %s <CTD WOCE> <SUM WOCE>" % argv[0]
        return 1
    
    ctdfile = L.model.datafile.DataFile()
    sumfile = L.model.datafile.SummaryFile()

    with open(argv[1], 'r') as in_file:
        ctdwoce.read(ctdfile, in_file)

    with open(argv[2], 'r') as in_file:
        sumwoce.read(sumfile, in_file)

    woce.combine(ctdfile, sumfile)

    ctdex.write(ctdfile, sys.stdout)


if __name__ == '__main__':
    sys.exit(main(sys.argv))
